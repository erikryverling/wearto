<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <!-- Components -->

    <style name="TextAppearance.WearTo.TodoistLink" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WearTo.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@android:color/white</item>
    </style>
</resources>