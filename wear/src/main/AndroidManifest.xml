<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="se.yverling.wearto">

    <uses-feature android:name="android.hardware.type.watch"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:name=".core.WearToApplication"
            android:icon="@mipmap/ic_launcher_round"
            android:label="@string/app_name"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            android:supportsRtl="false"
            android:allowBackup="true"
            android:fullBackupContent="@xml/backup_rules"
            tools:ignore="GoogleAppIndexingWarning">

        <meta-data
                android:name="com.google.android.wearable.standalone"
                android:value="false"/>

        <uses-library android:name="com.google.android.wearable" android:required="false"/>

        <activity
                android:name=".items.ItemsActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="android.support.wearable.activity.ConfirmationActivity"
                android:theme="@style/TransparentTheme">
        </activity>

        <service android:name=".sync.datalayer.DataLayerListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED"/>
                <action android:name="com.google.android.gms.wearable.CAPABILITY_CHANGED"/>
                <data android:scheme="wear" android:host="*" android:path="/items"/>
            </intent-filter>
        </service>
    </application>
</manifest>
